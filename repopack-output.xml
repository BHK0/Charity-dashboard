                    className={`p-3 rounded-lg border-2 transition-colors ${
                      formData.donationType === type 
                        ? 'border-[#998966] bg-[#998966] text-white'
                        : 'border-gray-200 hover:border-[#998966]'
                    }`}
                  >
                    {type}
